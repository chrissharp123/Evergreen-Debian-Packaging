HFQDN=$(perl -MNet::Domain -e 'print Net::Domain::hostfqdn() . "\n";')


if [ -f /usr/share/debconf/confmodule ]; then
    . /usr/share/debconf/confmodule
fi
case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    purge)



#########TODO LOOK INTO UCF
